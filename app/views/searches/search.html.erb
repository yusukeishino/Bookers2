 <% if @books.present? %>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
     <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
   </table>
 <% else %>
 <% if @users.present? %>
    <table>
     <thead>
      <tr>
       <th>Image</th>
       <th>name</th>
       <th></th>
       <th></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
      <tr>
      <!--投稿ユーザー画像-->
      <td>
       <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg" %>
      </td>
      <!--ユーザー名-->
      <td>
       <%= user.name %>
      </td>
      <!--フォロー数-->
      <td>
       <p><%= "フォロー数: #{user.follower.count}" %></p>
      </td>
      <!--フォロワー数-->
      <td>
       <p><%= "フォロワー数: #{user.followed.count}" %></p>
      </td>
      <!--フォローする・外す-->
      <td>
       <%= render 'relationships/follow_button', user: user %>
      </td>
      <!--show-->
      <td>
       <%= link_to "Show", user_path(user.id)  %>
      </td>
      </tr>
      <% end %>
     </tbody>
    </table>
    <% end %>
 <% end %>
