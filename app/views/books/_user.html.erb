  <%= link_to "User edit", edit_user_path(user), class: 'btn btn-outline-secondary btn-bloc fas fa-user-cog edit_user' %>


<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
